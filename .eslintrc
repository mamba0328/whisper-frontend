{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked",
        "plugin:@stylistic/js/all-extends"
    ],
    "plugins": ["@typescript-eslint", "@stylistic/js"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": true,
        "tsconfigRootDir": "__dirname"
    },
    "ignorePatterns": ["*.test.ts", "*.config.*"],
    "rules": {
        // turns on a rule with configuration
        "@typescript-eslint/no-unsafe-assignment": "off",
        "@typescript-eslint/no-unsafe-member-access": "off",
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-unsafe-call": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-explicit-any": "off",

        //stylistic rule
        "@stylistic/js/object-curly-spacing": ["warn", "always"],
        "@stylistic/js/function-paren-newline": "off",
        "@stylistic/js/newline-per-chained-call": "off",
        "@stylistic/js/quote-props": "off",
        "@stylistic/js/function-call-argument-newline": "off",
        "@stylistic/js/array-bracket-newline": "off",
        "@stylistic/js/newline-per-chained-cal": "off",
        "@stylistic/js/padded-blocks": "off",
        "@stylistic/js/object-property-newline": "off",
        "@stylistic/js/multiline-ternary": "off",
        "@stylistic/js/array-element-newline": "off",
        "@stylistic/js/no-confusing-arrow": "off"
    },
    "overrides": [
        {
            "files": "*.test.ts",
            "rules": {
                "no-var-requires": 0,
                "no-unsafe-assignmen": 0
            }
        }
    ],
    "root": true
}